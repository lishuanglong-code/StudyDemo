<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="study.demo">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.SPActivity"/>

        <activity android:name=".activity.ScreenAdaptiveAvtivity"/>

        <activity android:name=".activity.AnnotationActivity"/>

        <activity android:name=".activity.PermissionActivity"/>

        <activity android:name=".activity.PermissionChildActivity"/>

        <activity android:name=".activity.RxJavaActivity"/>

        <activity android:name=".activity.SimpleTestActivity"/>

        <activity android:name=".activity.ConstraintLayoutActivity"/>

        <activity android:name=".activity.CameraActivity"/>

        <activity android:name=".activity.ShowPictureActivity"/>

        <activity android:name=".activity.TestFragmentLifeActivity"/>

        <activity android:name=".activity.ServiceActivity"/>

        <!--正则表达式的 Activity-->
        <activity android:name=".activity.RegexActivity"/>
        <!--android 框架-->
        <activity android:name=".activity.jetpack.lifecycle.LifecycleActivity"/>
        <activity android:name=".activity.jetpack.livedata.LiveDataActivity"/>


        <!-- service-->
        <service android:name="study.demo.service.MyService"/>





    </application>

</manifest>